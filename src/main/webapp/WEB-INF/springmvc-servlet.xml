<?xml version="1.0" encoding="UTF-8"?>
<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Enforce @Required annotations -->
	<bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor" />

	<bean id="abstractProxyController" abstract="true">
		<property name="commandClass" value="com.randomcoder.proxy.server.IdCommand" />
		<property name="endpointTracker" ref="endpointTracker" />
		<property name="requireSession" value="false" />
		<property name="cacheSeconds" value="0" />
		<property name="supportedMethods">
			<list>
				<value>GET</value>
			</list>
		</property>
	</bean>

	<bean
			id="connectController"
			class="com.randomcoder.proxy.server.ConnectController"
			parent="abstractProxyController">
		<property name="commandClass" value="com.randomcoder.proxy.server.ConnectCommand" />
	</bean>

	<bean
			id="sendController"
			class="com.randomcoder.proxy.server.SendController"
			parent="abstractProxyController">
		<property name="supportedMethods">
			<list>
				<value>POST</value>
			</list>
		</property>
	</bean>

	<bean id="authController" class="com.randomcoder.proxy.server.AuthController">
		<property name="requireSession" value="false" />
		<property name="cacheSeconds" value="0" />
		<property name="supportedMethods">
			<list>
				<value>GET</value>
			</list>
		</property>		
	</bean>
	
	<bean
			id="receiveController"
			class="com.randomcoder.proxy.server.ReceiveController"
			parent="abstractProxyController" />

	<bean
			id="pingController"
			class="com.randomcoder.proxy.server.PingController"
			parent="abstractProxyController" />

	<bean
			id="disconnectController"
			class="com.randomcoder.proxy.server.DisconnectController"
			parent="abstractProxyController" />

	<bean id="handlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="alwaysUseFullPath" value="true" />
		<property name="mappings">
			<props>
				<prop key="/auth">authController</prop>
				<prop key="/connect">connectController</prop>
				<prop key="/send">sendController</prop>
				<prop key="/receive">receiveController</prop>
				<prop key="/ping">pingController</prop>
				<prop key="/disconnect">disconnectController</prop>
			</props>
		</property>
	</bean>
	    
</beans>