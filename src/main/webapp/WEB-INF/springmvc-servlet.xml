<?xml version="1.0" encoding="UTF-8"?>
<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Enforce @Required annotations -->
	<bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor" />

	<bean id="connectController" class="com.randomcoder.proxy.server.ConnectController">
		<property name="commandClass" value="com.randomcoder.proxy.server.ConnectCommand" />
		<property name="endpointTracker" ref="endpointTracker" />
	</bean>

	<bean id="pingController" class="com.randomcoder.proxy.server.PingController">
		<property name="commandClass" value="com.randomcoder.proxy.server.IdCommand" />
		<property name="endpointTracker" ref="endpointTracker" />
	</bean>
		
	<bean id="handlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="alwaysUseFullPath" value="true" />
		<property name="mappings">
			<props>
				<prop key="/connect">connectController</prop>
				<prop key="/ping">pingController</prop>
			</props>
		</property>
	</bean>
	    
</beans>